<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.TrainingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/ic_lock"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">



        <View
            android:id="@+id/ic_star1"
            android:layout_width="@dimen/lock_icon_size"
            android:layout_height="@dimen/lock_icon_size"
            android:background="@drawable/ic_star"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/ic_star2"
            android:layout_width="@dimen/lock_icon_size"
            android:layout_height="@dimen/lock_icon_size"
            android:background="@drawable/ic_star"
            android:contentDescription="@null" />

        <View
            android:id="@+id/ic_star3"
            android:layout_width="@dimen/lock_icon_size"
            android:layout_height="@dimen/lock_icon_size"
            android:background="@drawable/ic_star"
            android:contentDescription="@null" />

        <View
            android:id="@+id/ic_star4"
            android:layout_width="@dimen/lock_icon_size"
            android:layout_height="@dimen/lock_icon_size"
            android:background="@drawable/ic_star"
            android:contentDescription="@null" />

    </LinearLayout>
    </LinearLayout>


