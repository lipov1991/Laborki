<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.TrainingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/startLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
                android:text="@string/start" />

            <View
                android:id="@+id/ic_unlock"
                android:layout_width="@dimen/unlock_size"
                android:layout_height="@dimen/unlock_size"
                android:background="@drawable/ic_unlock"
                android:visibility="invisible" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <View
                    android:id="@+id/ic_fire"
                    android:layout_width="@dimen/lock_icon_size"
                    android:layout_height="@dimen/lock_icon_size"
                    android:background="@drawable/ic_fire"
                    android:contentDescription="@null"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/ic_fire2"
                    android:layout_width="@dimen/lock_icon_size"
                    android:layout_height="@dimen/lock_icon_size"
                    android:background="@drawable/ic_fire"
                    android:contentDescription="@null"
                    android:visibility="invisible" />


                <View
                    android:id="@+id/ic_fire3"
                    android:layout_width="@dimen/lock_icon_size"
                    android:layout_height="@dimen/lock_icon_size"
                    android:background="@drawable/ic_fire"
                    android:contentDescription="@null"
                    android:visibility="invisible" />

                <View
                    android:id="@+id/ic_fire4"
                    android:layout_width="@dimen/lock_icon_size"
                    android:layout_height="@dimen/lock_icon_size"
                    android:background="@drawable/ic_fire"
                    android:contentDescription="@null"
                    android:visibility="invisible" />

            </LinearLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
                android:text="@string/sign_in" />

            <Button
                android:id="@+id/map_button"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="@color/colorPrimary"
                android:padding="15dp"

                android:text="Open Map"
                android:textColor="@android:color/white" />

        </LinearLayout>


    </RelativeLayout>
</layout>