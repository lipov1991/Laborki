<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">



        <View
            android:id="@+id/first_seq"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:background="@drawable/sequence_dot"
            tools:ignore="ContentDescription" />


        <View
            android:id="@+id/second_seq"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:background="@drawable/sequence_dot"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/third_seq"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:background="@drawable/sequence_dot"
            android:contentDescription="@null" />

        <View
            android:id="@+id/fourth_seq"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:background="@drawable/sequence_dot"
            android:contentDescription="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/information_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible"
        tools:text="@string/unlock_device_text" />

    <TextView
        android:id="@+id/remaining_tries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_below="@id/information_text"
        android:visibility="invisible"
        tools:text="@string/num_of_remaining_attempts" />

</RelativeLayout>