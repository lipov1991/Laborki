<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.TrainingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/ic_bordered_star"
                android:layout_width="@dimen/lock_icon_size"
                android:layout_height="@dimen/lock_icon_size"
                android:background="@drawable/ic_bordered_star"
                android:visibility="invisible"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/ic_star"
                android:layout_width="@dimen/lock_icon_size"
                android:layout_height="@dimen/lock_icon_size"
                android:background="@drawable/ic_star"
                android:contentDescription="@null"
                android:visibility="invisible" />

        </LinearLayout>

        <Button
            android:id="@+id/startLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/sign_in" />

    </RelativeLayout>
</layout>